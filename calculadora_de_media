var nome = "Amanda"

var notaDoPrimeiroSemestre = 9
var notaDoSegundoSemestre = 7
var notaDoTerceiroSemestre = 4
var notaDoQuartoSemestr = 2

var notaFinal = (notaDoPrimeiroSemestre + notaDoSegundoSemestre + notaDoTerceiroSemestre + notaDoQuartoSemestre) / 4

var notaFixada = notaFinal.toFixed (1)

console.log ("Bem vinda " + nome)
console.log (notaFixada)

